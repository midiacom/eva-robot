    <audioEffects mode="ON" />
  </settings>
  <script>
    <talk>Qual nível você quer jogar, nível teste ou nível 1.</talk>
    <listen />
    <switch var="$">
      <case op="exact" value="teste">
        <talk>Qual tabuada você quer fixar?</talk>
        <useMacro macro="Fixa_tabuada" />
      </case>
      <case op="exact" value="1">
        <talk>Então ótimo vamos testar o seu conhecimento nas tabuadas</talk>
        <useMacro macro="Fixa_dolar" />
        <useMacro macro="Multiplicando" />
        <counter var="ponto" op="=" value="0" />
       <loop var="Loop" times="3">
        <useMacro macro="nível_1" />
       </loop>
       <switch var="#ponto">
        <case op="eq" value="3">
          <counter var="ponto" op="=" value="0" />
          <talk>Oba,que bom que voce chegou aqui no nível dois</talk>
          <talk>Podemos começar?</talk>
          <listen />
          <switch var="$">
            <case op="exact" value="sim">
              <talk>Então vamos lá</talk>
              <loop var="Loop" times="3">
                <useMacro macro="Multiplicando" />
                <useMacro macro="nível_2" />
              </loop>
              <switch var="#ponto">
                <case op="gte" value="2">
                  <counter var="ponto" op="=" value="0" />
                  <talk>Oba,que bom que voce chegou aqui no nível três</talk>
                  <talk>Podemos começar?</talk>
                  <listen />
                  <switch var="$">
                    <case op="exact" value="sim">
                      <talk>Então vamos lá</talk>
                      <loop var="Loop" times="3">
                        <useMacro macro="Multiplicando" />
                        <useMacro macro="nível_3" />
                      </loop>
                    </case>
                  </switch>
               </case>
              </switch>
            </case>
          <case op="exact" value="nao">
            <talk>Tudo bem, começaremos em um outro momento</talk>
          </case>
          </switch>
        </case>  
       </switch>
      </case>
    </switch>  
  </script>
