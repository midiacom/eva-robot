<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="case_5" xsi:noNamespaceSchemaLocation="EvaML-Schema/evaml_schema.xsd">
  <settings>
    <voice tone="pt-BR_IsabelaV3Voice" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    <random id="loop" min="1" max="4" />
    <wait duration="1000" />
    <switch var="$">
      <case op="eq" value="1">
        <led animation="HAPPY" />
      </case>
      <case op="eq" value="2">
        <led animation="SAD" />
      </case>
      <case op="eq" value="3">
        <led animation="ANGRY" />
      </case>
      <default>
        <stop />
      </default>
    </switch>
    <goto target="loop" />
  </script>
</evaml>