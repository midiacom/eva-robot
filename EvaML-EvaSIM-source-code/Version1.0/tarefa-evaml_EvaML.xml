<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="tarefa-evaml" xsi:noNamespaceSchemaLocation="EvaML-Schema/evaml_schema.xsd" id="f026f2c472b3cbf8cb4dcc5372cd4922">
  <settings>
    <voice tone="en-US_AllisonV3Voice" key="1000" />
    <lightEffects mode="ON" />
    <audioEffects mode="ON" />
  </settings>
  <script>
    
    <evaEmotion emotion="NEUTRAL" key="1001" />
    <light state="ON" color="WHITE" key="1002" />
    <audio source="mario-game-intro" block="TRUE" key="1003" />
    <light state="ON" color="YELLOW" key="1004" />
    <evaEmotion emotion="HAPPY" key="1005" />
    <talk key="1006">Hi, I'm the robot EVA / Hello, my name is EVA / Hi, what is up. I am the robot EVA</talk>
    <light state="ON" color="PINK" key="1007" />
    <evaEmotion emotion="NEUTRAL" key="1008" />
    <wait duration="2000" key="1009" />
    
    <talk key="1010">What is your name?</talk>
    <listen key="1011" />
    <talk key="1012">Hello $. I'm going to present my expressions</talk>
    <evaEmotion emotion="HAPPY" key="1013" />
    <talk key="1014">I can express hapiness</talk>
    <evaEmotion emotion="SAD" key="1015" />
    <talk key="1016">I can express sadness</talk>
    <evaEmotion emotion="ANGRY" key="1017" />
    <talk key="1018">I can express anger</talk>
    <evaEmotion emotion="NEUTRAL" key="1019" />
    <talk key="1020">Hey $, let's play the imitation game?</talk>
    <listen key="1021" />
    <switch var="$">
      <case op="exact" value="yes" key="1022" child_proc="true" var="$">
        <evaEmotion emotion="HAPPY" key="1023" />
        <talk key="1024">Excelent! Let's go now!</talk>
      </case>
      <case op="exact" value="no" key="1025" child_proc="true" var="$">
        <evaEmotion emotion="SAD" key="1026" />
        <talk key="1027">Oh, I'm sorry you don't want to play. Bye!</talk>
        <light state="OFF" key="1028" />
        <stop />        
      </case>
    <default key="1029" child_proc="false" value="" op="exact" /></switch>
    
    <talk key="1030">I will show some emotions and you try to imitate me</talk>
    <counter var="score" op="=" value="0" key="1031" />
    <counter var="chance" op="=" value="0" key="1032" />
    <random id="LOOP" min="1" max="3" key="1033" />
    <switch var="$">
      <case op="exact" value="1" key="1034" child_proc="true" var="$">
        <evaEmotion emotion="SAD" key="1035" />
        <light state="ON" color="BLUE" key="1036" />
        <talk key="1037">Can you imitate me?</talk>
      <userEmotion key="1038" />
    <switch var="$">
          <case op="exact" value="sad" key="1039" child_proc="true" var="$">
            <evaEmotion emotion="HAPPY" key="1040" />
      <talk key="1041">Ok! You are correct!</talk>
      <counter var="score" op="+" value="1" key="1042" />
    </case>
          <default key="1043" child_proc="true" value="" op="exact">
            <evaEmotion emotion="SAD" key="1044" />
      <talk key="1045">You are wrong!</talk>
    </default>
        </switch>
      </case>
      <case op="exact" value="2" key="1046" child_proc="true" var="$">
        <evaEmotion emotion="HAPPY" key="1047" />
        <light state="ON" color="YELLOW" key="1048" />
        <talk key="1049">Can you imitate me?</talk>
      <userEmotion key="1050" />
    <switch var="$">
          <case op="exact" value="happy" key="1051" child_proc="true" var="$">
            <evaEmotion emotion="HAPPY" key="1052" />
      <talk key="1053">Ok! You are correct!</talk>
      <counter var="score" op="+" value="1" key="1054" />
    </case>
          <default key="1055" child_proc="true" value="" op="exact">
            <evaEmotion emotion="SAD" key="1056" />
      <talk key="1057">You are wrong!</talk>
    </default>
        </switch>
      </case>
      <case op="exact" value="3" key="1058" child_proc="true" var="$">
        <evaEmotion emotion="ANGRY" key="1059" />
        <light state="ON" color="RED" key="1060" />
        <talk key="1061">Can you imitate me?</talk>
      <userEmotion key="1062" />
    <switch var="$">
          <case op="exact" value="angry" key="1063" child_proc="true" var="$">
            <evaEmotion emotion="HAPPY" key="1064" />
      <talk key="1065">Ok! You are correct!</talk>
      <counter var="score" op="+" value="1" key="1066" />
    </case>
          <default key="1067" child_proc="true" value="" op="exact">
            <evaEmotion emotion="SAD" key="1068" />
      <talk key="1069">You are wrong!</talk>
    </default>
        </switch>
      </case>
    <default key="1070" child_proc="false" value="" op="exact" /></switch>
    <counter var="chance" op="+" value="1" key="1071" />
    <switch var="chance">
      <case op="eq" value="3" key="1072" child_proc="true" var="chance">
        <evaEmotion emotion="HAPPY" key="1073" />
        <talk key="1074">Your score was #score</talk>
        <talk key="1075">It was good to play with you $1. Bye!</talk>
      </case>
      <default key="1076" child_proc="true" value="" op="exact">
        <goto target="LOOP" />
      </default>
    </switch>
  </script>
  
