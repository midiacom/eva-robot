<evaml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="script01" xsi:noNamespaceSchemaLocation="EvaML-Schema/evaml_schema.xsd">
  <settings>
    <voice tone="pt-BR_IsabelaV3Voice" />
  </settings>
  <script>
    <evaEmotion emotion="NEUTRAL" />
      <light state="ON" />
      <talk>Olá eu sou o robô Eva</talk>
      <audio source="fanfare2" block="TRUE" />
      <talk>Qual o seu nome?</talk>
      <listen />
    <talk>Muito prazer $</talk>
    <talk>Três variáveis serão criadas. Olha na tabela ao lado </talk>
    <counter var="var1" op="=" value="0" />
      <counter var="var2" op="=" value="0" />
      <counter var="var3" op="=" value="0" />
    <random min="1" max="3" />
    <talk>Veja como estou me sentindo hoje</talk>
    <switch var="$">
      <case op="exact" value="1">
        <evaEmotion emotion="SAD" />
        <light state="ON" color="BLUE" />
        <talk>Estou triste</talk>
        <motion type="2DOWN" />
        <talk>Vou incrementar a variável var 1 em uma unidade</talk>
        <counter var="var1" op="+" value="1" />
      </case>
      <case op="exact" value="2">
        <evaEmotion emotion="ANGRY" />
        <light state="ON" color="RED" />
        <talk>Estou com raiva</talk>
        <motion type="2DOWN" />
        <talk>Vou incrementar a variável var 2 em duas unidades</talk>
        <counter var="var2" op="+" value="2" />
      </case>
      <case op="exact" value="3">
        <evaEmotion emotion="HAPPY" />
        <light state="ON" color="GREEN" />
        <talk>Estou muito feliz</talk>
        <motion type="2UP" />
        <talk>Vou incrementar a variável var 3 em três unidades</talk>
        <counter var="var3" op="+" value="3" />
      </case>
    </switch>
    <evaEmotion emotion="NEUTRAL" />
    <talk>Ouça essa música e me diga como você está se sentindo</talk>
    <audio source="song-vivaldi-spring" block="FALSE" />
    <listen />
    <talk>Nossa você está $</talk>
      <talk>Até mais, $1</talk>
      <light state="OFF" />
    </script>
  </evaml>